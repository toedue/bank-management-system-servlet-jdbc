<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
         https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0"
         metadata-complete="false">

    <display-name>Banking System</display-name>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- Login Servlet -->
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.banking.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Register Servlet -->
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>com.banking.servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!-- Logout Servlet -->
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.banking.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!-- User Dashboard Servlet -->
    <servlet>
        <servlet-name>userDashboard</servlet-name>
        <servlet-class>com.banking.servlet.UserDashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userDashboard</servlet-name>
        <url-pattern>/user/dashboard</url-pattern>
    </servlet-mapping>

    <!-- Send Money Servlet -->
    <servlet>
        <servlet-name>sendMoney</servlet-name>
        <servlet-class>com.banking.servlet.SendMoneyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sendMoney</servlet-name>
        <url-pattern>/user/sendMoney</url-pattern>
    </servlet-mapping>

    <!-- View Transactions Servlet -->
    <servlet>
        <servlet-name>viewTransactions</servlet-name>
        <servlet-class>com.banking.servlet.ViewTransactionsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>viewTransactions</servlet-name>
        <url-pattern>/user/viewTransactions</url-pattern>
    </servlet-mapping>

    <!-- Update Profile Servlet -->
    <servlet>
        <servlet-name>updateProfile</servlet-name>
        <servlet-class>com.banking.servlet.UpdateProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>updateProfile</servlet-name>
        <url-pattern>/user/updateProfile</url-pattern>
    </servlet-mapping>

    <!-- Admin Dashboard Servlet -->
    <servlet>
        <servlet-name>adminDashboard</servlet-name>
        <servlet-class>com.banking.servlet.AdminDashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>adminDashboard</servlet-name>
        <url-pattern>/admin/dashboard</url-pattern>
    </servlet-mapping>

    <!-- Add Customer Servlet -->
    <servlet>
        <servlet-name>addCustomer</servlet-name>
        <servlet-class>com.banking.servlet.AddCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addCustomer</servlet-name>
        <url-pattern>/admin/addCustomer</url-pattern>
    </servlet-mapping>

    <!-- View Customers Servlet -->
    <servlet>
        <servlet-name>viewCustomers</servlet-name>
        <servlet-class>com.banking.servlet.ViewCustomersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>viewCustomers</servlet-name>
        <url-pattern>/admin/viewCustomers</url-pattern>
    </servlet-mapping>

    <!-- Edit Customer Servlet -->
    <servlet>
        <servlet-name>editCustomer</servlet-name>
        <servlet-class>com.banking.servlet.EditCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>editCustomer</servlet-name>
        <url-pattern>/admin/editCustomer</url-pattern>
    </servlet-mapping>

    <!-- Delete Customer Servlet -->
    <servlet>
        <servlet-name>deleteCustomer</servlet-name>
        <servlet-class>com.banking.servlet.DeleteCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteCustomer</servlet-name>
        <url-pattern>/admin/deleteCustomer</url-pattern>
    </servlet-mapping>

    <!-- Manage Transaction Servlet -->
    <servlet>
        <servlet-name>manageTransaction</servlet-name>
        <servlet-class>com.banking.servlet.ManageTransactionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>manageTransaction</servlet-name>
        <url-pattern>/admin/manageTransaction</url-pattern>
    </servlet-mapping>

    <!-- Admin View Transactions Servlet -->
    <servlet>
        <servlet-name>adminViewTransactions</servlet-name>
        <servlet-class>com.banking.servlet.AdminViewTransactionsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>adminViewTransactions</servlet-name>
        <url-pattern>/admin/viewTransactions</url-pattern>
    </servlet-mapping>

</web-app>
